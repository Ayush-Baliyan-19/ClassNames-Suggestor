{
  "name": "css-suggestor",
  "displayName": "Css-Suggestor",
  "description": "Suggests CSS classes from npm packages",
  "version": "0.0.2",
  "publisher": "AyushBaliyan",
  "engines": {
    "vscode": "^1.54.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:html",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact",
    "onLanguage:typescriptjsx",
    "onCommand:css-suggestor.setPackage"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "css-suggestor.setPackage",
        "title": "CSS Suggestor: Set NPM Package"
      }
    ],
    "languages": [
      {
        "id": "html",
        "extensions": [
          ".html"
        ],
        "aliases": [
          "HTML",
          "htm",
          "html"
        ]
      },
      {
        "id": "javascript",
        "extensions": [
          ".js"
        ],
        "aliases": [
          "JavaScript",
          "javascript",
          "js"
        ]
      },
      {
        "id": "typescript",
        "extensions": [
          ".ts"
        ],
        "aliases": [
          "TypeScript",
          "typescript",
          "ts"
        ]
      },
      {
        "id": "javascriptreact",
        "extensions": [
          ".jsx"
        ],
        "aliases": [
          "JavaScript React",
          "javascriptreact",
          "jsx"
        ]
      },
      {
        "id": "typescriptreact",
        "extensions": [
          ".tsx"
        ],
        "aliases": [
          "TypeScript React",
          "typescriptreact",
          "typescriptjsx",
          "tsx"
        ]
      }
    ],
    "configurationDefaults": {
      "[html]": {
        "editor.quickSuggestions": {
          "other": true,
          "comments": true,
          "strings": true
        }
      },
      "[javascript]": {
        "editor.quickSuggestions": {
          "other": true,
          "comments": true,
          "strings": true
        }
      },
      "[typescript]": {
        "editor.quickSuggestions": {
          "other": true,
          "comments": true,
          "strings": true
        }
      },
      "[javascriptreact]": {
        "editor.quickSuggestions": {
          "other": true,
          "comments": true,
          "strings": true
        }
      },
      "[typescriptreact]": {
        "editor.quickSuggestions": {
          "other": true,
          "comments": true,
          "strings": true
        }
      },
      "[typescriptjsx]": {
        "editor.quickSuggestions": {
          "other": true,
          "comments": true,
          "strings": true
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "pnpm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.54.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "eslint": "^9.19.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
